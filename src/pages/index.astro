---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import { findImage, isVideo } from "../utils";
import BlogPostMetadata from "../components/BlogPostMetadata.astro";
// const posts =  (await getCollection('blog', x => !x.data.draft)).sort(
// 	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
// );
let posts = await Promise.all(
    (
        await getCollection("blog", (x) => import.meta.env.IS_PRODUCTION !== 'false' ? !x.data.draft : true)
    )
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
        .map(async (x) => {
            const rendered = await x.render();
            const b = x.data.banner
                ? await findImage(`${x.slug}/${x.data.banner}`).catch()
                : null;
            return { banner: b, remarkPluginFrontmatter:rendered.remarkPluginFrontmatter, ...x };
        })
);
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style lang="scss">
            ul {
                list-style-type: none;
                padding: unset;
            }
            ul li {
                display: flex;
            }
            ul li :global(time) {
                flex: 0 0 130px;
                font-style: italic;
                color: #595959;
            }
            ul li a:visited {
                color: #8e32dc;
            }

            .post-preview {
                a.abstract {
                    text-decoration: none;
                    color: inherit;
                }
                margin-bottom: var(--spacing-8);
                h1 {
                    margin: unset;
                }
                a {
                }
                img {
                    width: 100%;
                    height: 100px;
                    object-fit: cover;
                    object-position: center;
                }
            }
            video {
                width: 100%;
                height: 100px;
                object-fit: cover;
                object-position: center;
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <section>
                {
                    posts.map((post) => {
                        // console.log(post.data.banner, post.banner)
                        return (
                            <div class="post-preview">
                                <h1>
                                    <a href={`/${post.slug}/`}>
                                        {post.data.title}
                                    </a>
                                </h1>
                                    {post.data.banner &&
                                        (!isVideo(post.data.banner) ? (
                                            <img src={post.banner.src} alt={post.data.title}/>
                                        ) : (
                                            <video
                                                loop
                                                muted
                                                autoplay
                                                src={post.banner}
                                            />
                                        ))}
                                <BlogPostMetadata post={post}/>
<a class="abstract" href={`/${post.slug}/`}>
    {post.remarkPluginFrontmatter.abstract}
    ..
</a>
</div> 
                        );
                    })
                }
            </section>
        </main>
        <Footer />
    </body>
</html>
