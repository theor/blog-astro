---
import { Image } from 'astro:assets';
interface Props {
  src: ImageMetadata;
  alt: string;
  caption: string;
  width?: number | `${number}`;
}
const { src,alt,caption,  width, ...rest } = Astro.props;
// replace src={import("./([^")}]*") by src={import("./$1)}
---
<style>
    figure { 
        display: flex;
        flex-direction: column;
        flex: 1;
        margin: 1em;
         }
</style>
<figure class="blog-post-figure" {...rest}>
    <Image src={src} alt={alt || caption} width={width}/>
  <!-- {children && <figcaption><slot /></figcaption>} -->
  {caption && <figcaption>{caption}</figcaption>}
</figure>
