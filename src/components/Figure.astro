---
interface Props {
  src: string;
  alt: string;
  caption: string;
  width?: string;
}
const { src,alt,caption, children, width, ...rest } = Astro.props;
// replace src={import("./([^")}]*") by src={import("./$1)}
---
<style>
    figure { 
        display: flex;
        flex-direction: column;
        flex: 1;
        margin: 1em;
         }
</style>
<figure class="blog-post-figure" {...rest}>
    <img loading="lazy" src={src.src} alt={alt || caption} width={width}/>
  {children && <figcaption><slot /></figcaption>}
  {caption && <figcaption>{caption}</figcaption>}
</figure>
